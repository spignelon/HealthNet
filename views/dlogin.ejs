<%- include("partials/header") -%>

<form action="/login" method="post">
    <div class="bg-grey-lighter min-h-screen flex flex-col">
    <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
            <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
                <h1 class="mb-8 text-3xl text-center">Log in</h1>
                <input 
                    type="text"
                    class="block border border-grey-light w-full p-3 rounded mb-4"
                    name="ema"
                    placeholder="Email" />

                <input 
                    type="password"
                    class="block border border-grey-light w-full p-3 rounded mb-4"
                    name="pass"
                    placeholder="Password" />
                <button
                    type="submit"
                    class="w-full text-center bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                >Log in</button>
</form>

        <%if(peop==="fail"){%>
            <p style="color: red; text-align: center;">
                Incorrect Username or Password
            </p>
        <%}%>


        <div class="text-grey-dark mt-6" style="text-align: center;">
            Don't have an account? 
            <a class="no-underline border-b border-blue text-blue" href="/">
                Sign up
            </a>.
        </div>
    </div>
    </div>


<%- include("partials/footer") -%>